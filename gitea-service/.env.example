# Gitea Configuration
GITEA_URL=http://gitea.dev-platform.svc.cluster.local:3000
GITEA_TOKEN=change-me-gitea-admin-token

# LDAP Manager Service (for inter-service communication)
LDAP_MANAGER_URL=http://ldap-manager.dev-platform.svc.cluster.local:8080

# Server Configuration
PORT=8081
METRICS_PORT=9091
ENVIRONMENT=development
LOG_LEVEL=debug

# HTTP Client
HTTP_CLIENT_TIMEOUT=30s

# JWT Configuration (MUST match LDAP Manager's JWT_SECRET)
JWT_SECRET=change-me-jwt-secret-key
JWT_EXPIRATION=24h

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=*

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30
